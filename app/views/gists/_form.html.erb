<%= simple_form_for(@gist) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="row">
	    <div class="col-md-12">
	      <%= f.input :title, label: false, input_html:{class: "form-control", placeholder: "title"} %>
	    </div>
  	</div>
  	<br>
  	<div class="row">
	    <div class="col-md-12">
	      <%= f.input :content, label: false, input_html:{class: "tinymce", rows: 20, cols: 60} %>
	    </div>
  	</div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= tinymce %>
