<!DOCTYPE html>
<html>
<head>
  <title>MyGist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row">
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		  	<div class="col-md-2">
            <a class="navbar-brand" href="/">My GIST</a>
		    </div>
	      <div class="col-md-3 col-md-offset-7">
          <ul>
				    <% if user_signed_in? %>
				      <%= link_to 'Account', edit_user_registration_path, class: "btn btn-default navbar-btn" %>
				      <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "btn btn-default navbar-btn" %>
				    <% else %>
				      <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-default navbar-btn" %>
				      <%= link_to 'Sign in', new_user_session_path, class: "btn btn-default navbar-btn" %>
				    <% end %>
	        </ul>
		    </div>
		  </div>
		</nav>
	</div>

<%= yield %>

</body>
</html>
